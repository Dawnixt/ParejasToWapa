<Page
    x:Class="ParejasCartas_UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ParejasCartas_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <Image x:ConnectionId='2' x:Name="Imagen" Source="ms-appx:///Assets/cartas (1).jpg" MaxHeight="300" RelativePanel.AlignHorizontalCenterWithPanel="True"></Image>
        <TextBlock Text="Encuentra la Pareja" FontSize="60" RelativePanel.Below="Imagen" ></TextBlock>
        <Button x:ConnectionId='3' Name="btnJugar" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Width="100" Height="60" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom"                       >Jugar</Button>
        <Button x:ConnectionId='4' Name="btnRanking" RelativePanel.Below="btnJugar" Margin="0,90,0,0" RelativePanel.AlignHorizontalCenterWithPanel="True"  Width="100" Height="60"                         >Ranking</Button>
    </RelativePanel>
</Page>

