<Page
    x:Class="ParejasCartas_UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ParejasCartas_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightGreen">

    <RelativePanel>
        <Image x:Name="Imagen" Source="ms-appx:///Assets/cartas (1).jpg" MaxHeight="300" RelativePanel.AlignHorizontalCenterWithPanel="True"></Image>
        <TextBlock Name="titulo" Text="Encuentra la Pareja" FontSize="60" RelativePanel.Below="Imagen" RelativePanel.AlignHorizontalCenterWithPanel="True"></TextBlock>
        <Button RelativePanel.AlignHorizontalCenterWithPanel="True" Name="jugar" FontSize="50" RelativePanel.Below="titulo" Margin="25"  Tapped="BtnJugar_Click" RelativePanel.AlignVerticalCenterWithPanel="True" >Jugar</Button>
        <Button RelativePanel.AlignHorizontalCenterWithPanel="True" Name="Ranking" FontSize="50"  RelativePanel.Below="jugar" Margin="25" Tapped="BtnRanking_Click">Ranking</Button>
    </RelativePanel>
</Page>
